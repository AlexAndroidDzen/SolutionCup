<resources>
    <!-- Base application theme. -->
    <style name="Theme.Tink" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_500</item>

        <item name="colorAccent">@color/background</item>
    </style>

    <style name="TitleTin" parent="Theme.Tink">
        <item name="android:textColor">@color/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleTin" parent="Theme.Tink">
        <item name="android:textColor">@color/subTitle</item>
    </style>

    <style name="Overaly" parent="Theme.Tink">
        <item name="android:backgroundTint">@color/background</item>
    </style>

    <style name="TinkButton" parent="Theme.Tink">
        <item name="android:textColor">@color/button</item>
        <item name="android:background">@drawable/backgrond_but</item>
        <item name="android:backgroundTint">@color/button_back</item>
    </style>

</resources>